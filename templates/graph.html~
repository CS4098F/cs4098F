<script>
	
	$(function()
	{
	        require(['static/ace-master/lib/ace/ace', 'static/ace-master/lib/ace/ext/language_tools'], function(ace)
		{
			var textarea = $('#content');
	       	  	editor = ace.edit("editor");
	       	 	editor.setTheme("static/ace-master/lib/ace/theme/monokai");
	       		editor.getSession().setMode("static/ace-master/lib/ace/mode/pml");
			editor.getSession().on('change', function () {
      				 textarea.val(editor.getSession().getValue());
			});
			editor.setReadOnly(true)
			textarea.val(editor.getSession().getValue());
	 		editor.setOptions(
			{
        			enableBasicAutocompletion: true,
        			enableLiveAutocompletion: true
        	  	});
        	  	editor.resize();
			var button;
          		button = document.getElementById('btnSave');
          		button.addEventListener('click', function (e) {
          		var outputXmlStr, blob;
          		outputXmlStr = editor.getSession().getValue();
          		// If the string is null or empty, do nothing.
          		if (!outputXmlStr)
                		return;
                	blob = new Blob([outputXmlStr], { type: 'text/plain' });
               		// Use the FileSaver.js interface to download the file.
               		saveAs(blob, 'tempfile.pml');
            		});
     		});
     		$(window).resize(resizeAce);
		
           		
     		resizeAce();
    	});
</script>

